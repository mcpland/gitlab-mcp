{
  "name": "gitlab-mcp",
  "version": "1.0.0",
  "description": "A MCP server for GitLab",
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=20.11.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcpland/gitlab-mcp.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/http.ts",
    "start": "node dist/index.js",
    "start:http": "node dist/http.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint-staged": "lint-staged",
    "inspector": "pnpm exec @modelcontextprotocol/inspector node dist/index.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "fetch-cookie": "^3.2.0",
    "open": "^11.0.0",
    "picomatch": "^4.0.3",
    "pino": "^10.3.1",
    "pkce-challenge": "^6.0.0",
    "tough-cookie": "^6.0.0",
    "undici": "^7.21.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@modelcontextprotocol/inspector": "^0.20.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/picomatch": "^4.0.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  }
}
