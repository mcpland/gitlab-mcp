{
  "name": "gitlab-mcp",
  "version": "0.1.5",
  "description": "Model Context Protocol server for GitLab integration",
  "main": "./build/index.js",
  "type": "module",
  "bin": {
    "gitlab-mcp": "build/index.js"
  },
  "files": [
    "build"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "deploy": "npm publish --access public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "unadlib",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node-fetch": "^2.6.12",
    "@types/yargs": "^17.0.33"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "yargs": "^18.0.0",
    "zod-to-json-schema": "^3.24.6"
  }
}
